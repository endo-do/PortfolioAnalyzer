# Database Configuration
# Application user (for normal operations)
DB_HOST=localhost
DB_USER=portfolio_app
DB_PASSWORD=your_app_password_here
DB_NAME=portfolioanalyzer

# MySQL root user (for setup and admin operations)
DB_ROOT_USER=root
DB_ROOT_PASSWORD=your_root_password_here

# Test Database Configuration
TEST_DB_NAME=portfolioanalyzer_test

# Flask Secret Key
SECRET_KEY=your_secret_key_here

# Admin User Configuration
ADMIN_PASSWORD=your_secure_admin_password_here

# Network Configuration
HOST_IP=0.0.0.0
PORT=5000
DB_PORT=3306

# Database Connection Pool Configuration
DB_POOL_SIZE=5
DB_POOL_NAME=mypool

# Logging Configuration
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
SECURITY_LOG_MAX_BYTES=5242880
SECURITY_LOG_BACKUP_COUNT=10
ERROR_LOG_MAX_BYTES=5242880
