EXCHANGE_NAME_MAX_LENGTH=255
CURRENCY_NAME_MAX_LENGTH=50
CURRENCY_CODE_MAX_LENGTH=3
CURRENCY_SYMBOL_MAX_LENGTH=10

# API Configuration
YAHOO_FINANCE_PERIOD_DAYS=5
YAHOO_FINANCE_EXCHANGE_PERIOD_DAYS=1
YAHOO_FINANCE_INFO_PERIOD_DAYS=1
YAHOO_FINANCE_LOOKUP_PERIOD_DAYS=7

# Scheduler Configuration
